}

.container {
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    margin: auto;
    border: 6px solid #D4A017; /* Moldura dourada */
}

h1, h2 {
    text-align: center;
    color: #0073C6; /* Azul principal */
}

.igreja-info, .corpo-carta, .assinatura {
    margin-bottom: 20px;
}

.igreja-info p, .corpo-carta p {
    text-align: center;
    font-size: 16px;
}

.destaque {
    font-weight: bold;
    color: #000; /* Preto para destaques */
}

.assinatura {
  font-size: 48px;
  text-shadow: 4px 4px 4px #aaa;
    text-align: center;
    margin-top: 40px;
    font-family: 'Brush Script MT', serif;
    font-size: 20px;
    color: #000;
}

.assinatura p {
    margin: 5px 0;
}

