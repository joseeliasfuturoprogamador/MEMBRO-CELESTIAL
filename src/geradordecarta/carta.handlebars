.detalhe-vermelho {
    width: 50px;
    height: 5px;
    background-color: #D14523;
    margin: 10px auto;
}

/* Imagem da igreja */
.imagem-igreja {
    display: block;
    margin: 20px auto;
    max-width: 100%;
}

